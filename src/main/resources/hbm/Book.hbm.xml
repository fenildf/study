<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping PUBLIC 	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>	<class name="com.study.model.Book" table="t_book" lazy="true">		<id name="id" type="java.lang.Long" >			<generator class="native" />		</id>		<property name="title" />		<property name="content" type="text" />								<property name="createTime" column="create_time" />		<property name="updateTime" column="update_time" />		 	</class></hibernate-mapping>